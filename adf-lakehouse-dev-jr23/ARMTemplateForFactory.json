{
	"$schema": "http://schema.management.azure.com/schemas/2015-01-01/deploymentTemplate.json#",
	"contentVersion": "1.0.0.0",
	"parameters": {
		"factoryName": {
			"type": "string",
			"metadata": "Data Factory name",
			"defaultValue": "adf-lakehouse-dev-jr23"
		},
		"ls_adls_bank_lakehouse_dev_properties_typeProperties_url": {
			"type": "string",
			"defaultValue": "https://stlakehousedevjr23.dfs.core.windows.net/"
		},
		"ls_kv_bank_lakehouse_dev_properties_typeProperties_baseUrl": {
			"type": "string",
			"defaultValue": "https://kv-bank-lakehouse-dev.vault.azure.net/"
		},
		"ls_sql_bank_lakehouse_dev_properties_typeProperties_server": {
			"type": "string",
			"defaultValue": "sqlsrv-lakehouse-dev.database.windows.net"
		},
		"ls_sql_bank_lakehouse_dev_properties_typeProperties_database": {
			"type": "string",
			"defaultValue": "sqldb-oltp-sales"
		},
		"ls_sql_bank_lakehouse_dev_properties_typeProperties_userName": {
			"type": "string",
			"defaultValue": "sqladminuser"
		}
	},
	"variables": {
		"factoryId": "[concat('Microsoft.DataFactory/factories/', parameters('factoryName'))]"
	},
	"resources": [
		{
			"name": "[concat(parameters('factoryName'), '/ls_adls_bank_lakehouse_dev')]",
			"type": "Microsoft.DataFactory/factories/linkedServices",
			"apiVersion": "2018-06-01",
			"properties": {
				"annotations": [],
				"type": "AzureBlobFS",
				"typeProperties": {
					"url": "[parameters('ls_adls_bank_lakehouse_dev_properties_typeProperties_url')]"
				}
			},
			"dependsOn": []
		},
		{
			"name": "[concat(parameters('factoryName'), '/ls_kv_bank_lakehouse_dev')]",
			"type": "Microsoft.DataFactory/factories/linkedServices",
			"apiVersion": "2018-06-01",
			"properties": {
				"annotations": [],
				"type": "AzureKeyVault",
				"typeProperties": {
					"baseUrl": "[parameters('ls_kv_bank_lakehouse_dev_properties_typeProperties_baseUrl')]"
				}
			},
			"dependsOn": []
		},
		{
			"name": "[concat(parameters('factoryName'), '/ls_sql_bank_lakehouse_dev')]",
			"type": "Microsoft.DataFactory/factories/linkedServices",
			"apiVersion": "2018-06-01",
			"properties": {
				"annotations": [],
				"type": "AzureSqlDatabase",
				"typeProperties": {
					"server": "[parameters('ls_sql_bank_lakehouse_dev_properties_typeProperties_server')]",
					"database": "[parameters('ls_sql_bank_lakehouse_dev_properties_typeProperties_database')]",
					"encrypt": "mandatory",
					"trustServerCertificate": false,
					"authenticationType": "SQL",
					"userName": "[parameters('ls_sql_bank_lakehouse_dev_properties_typeProperties_userName')]",
					"password": {
						"type": "AzureKeyVaultSecret",
						"store": {
							"referenceName": "ls_kv_bank_lakehouse_dev",
							"type": "LinkedServiceReference"
						},
						"secretName": "sql-admin-password"
					}
				}
			},
			"dependsOn": [
				"[concat(variables('factoryId'), '/linkedServices/ls_kv_bank_lakehouse_dev')]"
			]
		},
		{
			"name": "[concat(parameters('factoryName'), '/ds_sql_oltp_bank_transaction')]",
			"type": "Microsoft.DataFactory/factories/datasets",
			"apiVersion": "2018-06-01",
			"properties": {
				"linkedServiceName": {
					"referenceName": "ls_sql_bank_lakehouse_dev",
					"type": "LinkedServiceReference"
				},
				"folder": {
					"name": "sql/source"
				},
				"annotations": [],
				"type": "AzureSqlTable",
				"schema": [
					{
						"name": "transaction_id",
						"type": "bigint",
						"precision": 19
					},
					{
						"name": "account_id",
						"type": "int",
						"precision": 10
					},
					{
						"name": "transaction_type",
						"type": "varchar"
					},
					{
						"name": "channel",
						"type": "varchar"
					},
					{
						"name": "amount",
						"type": "decimal",
						"precision": 18,
						"scale": 2
					},
					{
						"name": "transaction_date",
						"type": "datetime2",
						"scale": 7
					},
					{
						"name": "created_at",
						"type": "datetime2",
						"scale": 7
					}
				],
				"typeProperties": {
					"schema": "dbo",
					"table": "bank_transaction"
				}
			},
			"dependsOn": [
				"[concat(variables('factoryId'), '/linkedServices/ls_sql_bank_lakehouse_dev')]"
			]
		},
		{
			"name": "[concat(parameters('factoryName'), '/ds_adls_raw_bank_transaction')]",
			"type": "Microsoft.DataFactory/factories/datasets",
			"apiVersion": "2018-06-01",
			"properties": {
				"linkedServiceName": {
					"referenceName": "ls_adls_bank_lakehouse_dev",
					"type": "LinkedServiceReference"
				},
				"parameters": {
					"p_ingestion_date": {
						"type": "string"
					}
				},
				"folder": {
					"name": "adls/raw"
				},
				"annotations": [],
				"type": "Parquet",
				"typeProperties": {
					"location": {
						"type": "AzureBlobFSLocation",
						"folderPath": {
							"value": "bank_transaction/ingestion_date=@{dataset().p_ingestion_date}",
							"type": "Expression"
						},
						"fileSystem": "raw"
					},
					"compressionCodec": "snappy"
				},
				"schema": []
			},
			"dependsOn": [
				"[concat(variables('factoryId'), '/linkedServices/ls_adls_bank_lakehouse_dev')]"
			]
		},
		{
			"name": "[concat(parameters('factoryName'), '/ds_adls_curated_bank_transaction')]",
			"type": "Microsoft.DataFactory/factories/datasets",
			"apiVersion": "2018-06-01",
			"properties": {
				"linkedServiceName": {
					"referenceName": "ls_adls_bank_lakehouse_dev",
					"type": "LinkedServiceReference"
				},
				"folder": {
					"name": "adls/curated"
				},
				"annotations": [],
				"type": "Parquet",
				"typeProperties": {
					"location": {
						"type": "AzureBlobFSLocation",
						"folderPath": "bank_transaction",
						"fileSystem": "curated"
					},
					"compressionCodec": "snappy"
				},
				"schema": []
			},
			"dependsOn": [
				"[concat(variables('factoryId'), '/linkedServices/ls_adls_bank_lakehouse_dev')]"
			]
		},
		{
			"name": "[concat(parameters('factoryName'), '/ds_adls_analytics_bank_transaction')]",
			"type": "Microsoft.DataFactory/factories/datasets",
			"apiVersion": "2018-06-01",
			"properties": {
				"linkedServiceName": {
					"referenceName": "ls_adls_bank_lakehouse_dev",
					"type": "LinkedServiceReference"
				},
				"folder": {
					"name": "adls/analytics"
				},
				"annotations": [],
				"type": "Parquet",
				"typeProperties": {
					"location": {
						"type": "AzureBlobFSLocation",
						"folderPath": "bank_transaction",
						"fileSystem": "analytics"
					},
					"compressionCodec": "snappy"
				},
				"schema": []
			},
			"dependsOn": [
				"[concat(variables('factoryId'), '/linkedServices/ls_adls_bank_lakehouse_dev')]"
			]
		},
		{
			"name": "[concat(parameters('factoryName'), '/pl_sql_to_raw_bank_transaction')]",
			"type": "Microsoft.DataFactory/factories/pipelines",
			"apiVersion": "2018-06-01",
			"properties": {
				"activities": [
					{
						"name": "cp_sql_to_raw_bank_transaction",
						"type": "Copy",
						"dependsOn": [],
						"policy": {
							"timeout": "0.12:00:00",
							"retry": 0,
							"retryIntervalInSeconds": 30,
							"secureOutput": false,
							"secureInput": false
						},
						"userProperties": [
							{
								"name": "Source",
								"value": "dbo.bank_transaction"
							},
							{
								"name": "Destination",
								"value": "raw/bank_transaction/"
							}
						],
						"typeProperties": {
							"source": {
								"type": "AzureSqlSource",
								"additionalColumns": [
									{
										"name": "ingestion_date",
										"value": {
											"value": "@utcnow()",
											"type": "Expression"
										}
									}
								],
								"queryTimeout": "02:00:00",
								"partitionOption": "None"
							},
							"sink": {
								"type": "ParquetSink",
								"storeSettings": {
									"type": "AzureBlobFSWriteSettings",
									"copyBehavior": "PreserveHierarchy"
								},
								"formatSettings": {
									"type": "ParquetWriteSettings"
								}
							},
							"enableStaging": false,
							"translator": {
								"type": "TabularTranslator",
								"typeConversion": true,
								"typeConversionSettings": {
									"allowDataTruncation": true,
									"treatBooleanAsNumber": false
								}
							}
						},
						"inputs": [
							{
								"referenceName": "ds_sql_oltp_bank_transaction",
								"type": "DatasetReference",
								"parameters": {}
							}
						],
						"outputs": [
							{
								"referenceName": "ds_adls_raw_bank_transaction",
								"type": "DatasetReference",
								"parameters": {
									"p_ingestion_date": {
										"value": "@formatDateTime(utcNow(),'yyyy-MM-dd')\n",
										"type": "Expression"
									}
								}
							}
						]
					}
				],
				"policy": {
					"elapsedTimeMetric": {}
				},
				"folder": {
					"name": "raw"
				},
				"annotations": []
			},
			"dependsOn": [
				"[concat(variables('factoryId'), '/datasets/ds_sql_oltp_bank_transaction')]",
				"[concat(variables('factoryId'), '/datasets/ds_adls_raw_bank_transaction')]"
			]
		}
	]
}